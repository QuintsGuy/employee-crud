<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}}</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        .navbar {
            background-color: #007bff;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .navbar a {
            color: #fff;
            text-decoration: none;
            margin-right: 15px;
            font-size: 16px;
            font-weight: bold;
            transition: color 0.3s;
        }

        .navbar a:hover {
            color: #dfe6e9;
        }

        .navbar .brand {
            font-size: 20px;
            font-weight: bold;
            margin-right: auto;
            color: #fff;
        }

        .content {
            padding: 20px;
        }

        .navbar a {
            padding: 10px;
            border-radius: 10px;
        }

        .navbar a:hover {
            background-color: #005bbc;
        }
    </style>
</head>
<body>
    <div class="navbar">
        <div class="brand">Employee Manager</div>
        <div id="postLogin-btns" style="display: none;">
            <a href="/">View All Employees</a>
            <a href="/create">Add Employee</a>
            <button id="logout-btn" onclick="logout()">Logout</button>
        </div>
        
        <div id="preLogin-btns">
            <a href="/login" id="login-btn">Login</a>
            <a href="/register" id="register-btn">Register</a>
        </div>
    </div>

    <div class="content">
        {{{body}}}
    </div>

    <script>
        async function checkAuth() {
            try {
                const response = await fetch('/auth-check', {
                    method: 'GET',
                    credentials: 'include'
                });

                if (response.ok) {
                    document.getElementById("preLogin-btns").style.display = "none";
                    document.getElementById("postLogin-btns").style.display = "inline-block";
                } else {
                    document.getElementById("preLogin-btns").style.display = "inline-block";
                    document.getElementById("postLogin-btns").style.display = "none";
                }
            } catch (err) {
                console.error("Auth check failed: ", err);
            }
        }
        
        document.addEventListener("DOMContentLoaded", checkAuth);

        function logout() {
            fetch('/logout', { method: 'POST', credentials: 'include' }) // Ensure cookie is removed
                .then(() => {
                    window.location.href = "/logout";
                })
                .catch(err => console.error("Logout failed:", err));
        }
    </script>
</body>
</html>
